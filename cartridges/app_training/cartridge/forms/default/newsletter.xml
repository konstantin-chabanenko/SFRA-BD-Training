<?xml version="1.0"?>

<form xmlns="http://www.demandware.com/xml/form/2008-04-19">
    <field formid="email" 
            label="E-mail" 			
            mandatory="true" 
			max-length="50" 
			missing-error="error.message.required"
			parse-error="error.message.parse.email.profile.form"
			range-error="error.message.lessthan50"
			regexp="^[\w.%+-]+@[\w.-]+\.[\w]{2,6}$" 
			value-error="This field is already used"
			type="string"/>  />
    <field formid="fname" 
            label="First Name"
    		mandatory="true" 
			max-length="50"
			missing-error="error.message.required" 
			range-error="error.message.lessthan50" 
			type="string" /> />
    <field formid="lname" 
            label="Last Name"
    		mandatory="true" 
			max-length="50" 
			missing-error="error.message.required"
			range-error="error.message.lessthan50" 
			type="string" /> />
            
    <action formid="save" valid-form="true"/>
</form>